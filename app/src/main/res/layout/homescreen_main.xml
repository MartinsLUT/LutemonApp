<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="70dp"
        android:background="@drawable/purple_button"
        android:gravity="center"
        android:text="Lutemon Battle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <Button
        android:id="@+id/newLutemon"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Create New Lutemon"
        android:textSize="20sp"
        android:visibility="visible"
        app:backgroundTint="#0DDC16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="341dp"
        android:layout_height="380dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Lutemons At Home"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lutemonHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="You have 0 Lutemons at home"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Button
                    android:id="@+id/viewHome"
                    android:layout_width="320dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="View Home"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:backgroundTint="#673AB7"
                    app:cornerRadius="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Training Area"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lutemonHome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="You have 0 Lutemons training"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <Button
                    android:id="@+id/viewTrainingArea"
                    android:layout_width="320dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="View Training Area"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:backgroundTint="#673AB7"
                    app:cornerRadius="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Battle Arena"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lutemonBattlle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="You have 0 Lutemons ready"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Button
                    android:id="@+id/viewBattleArena"
                    android:layout_width="320dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:text="View Battle Arena"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:backgroundTint="#673AB7"
                    app:cornerRadius="5dp" />

            </LinearLayout>
            <Button
                android:id="@+id/viewStatistics"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="View Statistics"
                android:textSize="15sp"
                app:backgroundTint="#673AB7"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/save"
                android:onClick="saveFileBtn"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="Save"
                android:textSize="15sp"
                app:backgroundTint="#673AB7"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/load"
                android:onClick="loadFileBtn"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="Load"
                android:textSize="15sp"
                app:backgroundTint="#673AB7"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/resetGame"
                android:onClick="resetGame"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="Rest Saved File"
                android:textSize="15sp"
                app:backgroundTint="#673AB7"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>